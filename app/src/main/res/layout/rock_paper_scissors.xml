<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_txt_size"
            android:gravity="center"
            android:text="剪刀石頭布" />

        <ImageView
            android:id="@+id/imgTop"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:contentDescription="石頭"
            app:srcCompat="@drawable/rock" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="VS"
            android:textSize="@dimen/title_txt_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgHand"
                android:layout_width="wrap_content"
                android:layout_height="103dp"
                android:layout_weight="1"
                android:contentDescription="布"
                app:srcCompat="@drawable/paper" />

            <ImageView
                android:id="@+id/imgScissors"
                android:layout_width="wrap_content"
                android:layout_height="103dp"
                android:layout_weight="1"
                android:contentDescription="剪刀"
                app:srcCompat="@drawable/scissors" />

            <ImageView
                android:id="@+id/imgRock"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="石頭"
                app:srcCompat="@drawable/rock" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="絕對不會輸猜拳"
            android:textSize="@dimen/title_txt_size" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="請按上列圖示"
            android:textSize="@dimen/title_txt_size" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/nechiko" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>